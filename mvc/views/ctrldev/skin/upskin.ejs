<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Skins</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <main>
        <h2>Cadastrar skin</h2>
        <section id="cadskin">
            <form method="post" action="/registrarskin" enctype="multipart/form-data">
                <!-- Iniciando primeira -->
                <div class="row">
                    <div class="row">
                        <input value="<%= skin.id %>"  id="txtid" type="hidden" name="txtid">
                        <div class="col">  
                    <div class="col">
                        <!-- Primeira coluna -->
                        <label for="txtnomeskin" class="form-label" >Nome Skin</label>
                        <input value="<%= skin.nome %>" type="text" class="form-control" name="txtnomeskin" id="txtnomeskin" tabindex="1" autofocus>
                       
                        <label for="selrarskin" class="form-label">Raridade</label>
                        
                        <% if (skin.raridade == "Comum") {  %>
                            <select value="<%= skin.raridade %>" name="selrarskin" id="selrarskin" class="form-control" tabindex="3">
                                <option value="Comum">Comum</option>
                                <option value="Rara">Rara</option>
                                <option value="Épica">Épica</option>
                                <option value="Lendário">Lendário</option>
                            </select>
                        <% } else if (skin.raridade == "Rara") {  %>
                            <select value="<%= skin.raridade %>" name="selrarskin" id="selrarskin" class="form-control" tabindex="3">
                                <option value="Rara">Rara</option>
                                <option value="Comum">Comum</option>
                                <option value="Épica">Épica</option>
                                <option value="Lendário">Lendário</option>
                            </select>
                            <% } else if (skin.raridade == "Épica") {  %>
                                <select value="<%= skin.raridade %>" name="selrarskin" id="selrarskin" class="form-control" tabindex="3">
                                    <option value="Épica">Épica</option>
                                    <option value="Rara">Rara</option>
                                    <option value="Comum">Comum</option>
                                    <option value="Lendário">Lendário</option>
                                </select>
                        <% } else { %>
                            <select value="<%= skin.raridade %>" name="selrarskin" id="selrarskin" class="form-control" tabindex="3">
                                <option value="Lendário">Lendário</option>
                                <option value="Comum">Comum</option>
                                <option value="Rara">Rara</option>
                                <option value="Épica">Épica</option>
                            </select>
                        <% } %>
                    </div>


                    <div class="col">
                        <!-- Segunda coluna -->
                        <label for="selcatskin" class="form-label">Categoria</label>

                        <% if (skin.categoria == "Acessório") {  %>
                            <select value="<%= skin.categoria %>" name="selcatskin" id="selcatskin" class="form-control " tabindex="2" >
                                <option value="Acessório">Acessório</option>
                                <option value="Chapéu">Chapéu</option>
                                <option value="Conjunto">Conjunto</option>
                                <option value="Mochila">Mochila</option>
                            </select>
                        <% } else if (skin.categoria == "Chapéu") {  %>
                            <select value="<%= skin.categoria %>" name="selcatskin" id="selcatskin" class="form-control " tabindex="2" >
                                <option value="Chapéu">Chapéu</option>
                                <option value="Acessório">Acessório</option>
                                <option value="Conjunto">Conjunto</option>
                                <option value="Mochila">Mochila</option>
                            </select>
                        <% } else if (skin.categoria == "Conjunto") {  %>
                            <select value="<%= skin.categoria %>" name="selcatskin" id="selcatskin" class="form-control " tabindex="2" >
                                <option value="Conjunto">Conjunto</option>
                                <option value="Chapéu">Chapéu</option>
                                <option value="Acessório">Acessório</option>
                                <option value="Mochila">Mochila</option>
                            </select>
                        <% } else { %>
                            <select value="<%= skin.categoria %>" name="selcatskin" id="selcatskin" class="form-control " tabindex="2" >
                                <option value="Mochila">Mochila</option>
                                <option value="Conjunto">Conjunto</option>
                                <option value="Chapéu">Chapéu</option>
                                <option value="Acessório">Acessório</option>
                            </select>
                        <% } %>


                        <label for="selgenskin" class="form-label">Gênero</label>
                        <% if (skin.genero == "Masculino") {  %>
                            <select value="<%= skin.genero %>" name="selgenskin" id="selgenskin" class="form-control" tabindex="4">
                                <option value="Masculino">Masculino</option>
                                <option value="Feminino">Feminino</option>
                            </select>
                        <% } else { %>
                            <select value="<%= skin.genero %>" name="selgenskin" id="selgenskin" class="form-control" tabindex="4">
                                <option value="Feminino">Feminino</option>
                                <option value="Masculino">Masculino</option>
                            </select>
                        <% } %>                
                        
                    </div> 
                    
                </div>
                <!-- iniciando segunda linha -->
                <div class="row m-4">
                    <div class="col">
                        <label for="photo1" class="form-label">Imagem 1</label>
                        <input value="<%= skin.foto1 %>" type="file" name="photo1" id="photo1" class="form-control " tabindex="5">
                    </div>
                    <div class="col">
                        <label for="photo2" class="form-label">Imagem 2</label>
                        <input value="<%= skin.foto2 %>" type="file" name="photo2" id="photo2" class="form-control " tabindex="">
                    </div>
                   
                    <div class="col">
                        <label for="txtvalorskin" class="form-label">Valor</label>
                        <input value="<%= skin.valor %>" type="text" name="txtvalorskin" id="txtvalorskin" class="form-control " tabindex="7">
                    </div>
                </div>
                <!-- Linha unica para descrição -->
                <label for="txtdescskin">Descrição</label>
                <textarea value="<%=skin.descricao%>" name="txtdescskin" id="txtdescskin" cols="" rows="6" class="form-control" tabindex="8" ><%=skin.descricao%></textarea>

                <!-- linha exclusiva do botão -->
                <div class="row">
                    <input type="submit" class="btn btn-warning mt-4" value="Cadastrar" name="btcadskin" id="btcadskin" tabindex="9">
                </div>
            </form>

        </section>
    </main>


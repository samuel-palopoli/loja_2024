      <section class="list">
          <div class="row">
              <a href="/pagina/addatrativo" style="color: black;"><button style="width: 99%; margin: 8px;" class="btn bg-danger">Cadastrar Atrativo</button></a>
          </div>
          <div class="row border border-1 border-Success rounded m-2 p-1 d-flex ">

          <div class="col border-end d-flex justify-content-center align-self-center"><h6>Nome</h6></div>
                  <div class="col border-end d-flex justify-content-center align-self-center"><h6>Latitude</h6></div>
                  <div class="col border-end d-flex justify-content-center align-self-center"><h6>Longitude</h6></div>
                  <div class="col border-end d-flex justify-content-center align-self-center"><h6>Foto</h6></div>
                  <div class="col border-end d-flex justify-content-center align-self-center"><h6>Descrição</h6></div>
                  <div class="col border-end d-flex justify-content-center align-self-center"><h6>Atualizar</h6></div>
                  <div class="col d-flex justify-content-center align-self-center"><h6>Deletar</h6></div>

          </div>
    <main>

       

          <% for(let atrativo of r ){ %>
            <div class="row border border-1 border-warning rounded m-2 p-1 d-flex ">
              <div class="col border-end d-flex justify-content-center align-self-center"><%= atrativo.nome %></div>
              <div class="col border-end d-flex justify-content-center align-self-center"><%= atrativo.latitude %> </div>
              <div class="col border-end d-flex justify-content-center align-self-center"><%= atrativo.longitude %></div>
              <div class="col border-end d-flex justify-content-center align-self-center"><img src="../images/upload/<%= atrativo.imagem %>" alt="<%= atrativo.imagem %>" class="thumbnail" style="max-width:90px;"></div>
              <div class="col border-end d-flex justify-content-center align-self-center"><%= atrativo.descricao %></div>
              <div class="col border-end d-flex justify-content-center align-self-center"><button onclick="atualizar('<%= atrativo.id %>')" class="btn bg-success" ><i class="bi bi-pencil"></i> Update</button></div>
              <div class="col d-flex justify-content-center align-self-center"><button onclick="apagar('<%= atrativo.id %>','<%= atrativo.nome %>')" class="btn bg-danger" ><i class="bi bi-trash"></i> Delete</button></div>
            </div>   
          <% } %>

      
       
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
